<% if @params[:remind] -%>
❗️このあとすぐ❗️
<% elsif entry[:is_today] -%>
❗️本日❗️
<% end -%>
<% if entry[:all_day] -%>
<% if entry[:start_date] == entry[:end_date] -%>
<%= entry[:start_date].strftime('%m/%d') %>
<% else -%>
<%= entry[:start_date].strftime('%m/%d') %>〜<%= entry[:end_date].strftime('%m/%d') %>
<% end -%>
<% else -%>
<% if entry[:start_date].strftime('%m/%d') == entry[:end_date].strftime('%m/%d') -%>
<% if entry[:start_date].strftime('%H/%M') == entry[:end_date].strftime('%H/%M') -%>
<%= entry[:start_date].strftime('%m/%d %H:%M') %>
<% else -%>
<%= entry[:start_date].strftime('%m/%d %H:%M') %>〜<%= entry[:end_date].strftime('%H:%M') %>
<% end -%>
<% else -%>
<%= entry[:start_date].strftime('%m/%d %H:%M') %>〜<%= entry[:end_date].strftime('%m/%d %H:%M') %>
<% end -%>
<% end -%>
<% if entry[:title] -%><%= entry[:title] %><% end %>

<% if entry[:location] -%><%= entry[:location] %><% end %>
<% if entry[:body] -%><%= entry[:body].chomp %><% end %>
<% if @params[:tag] && @params[:source] -%>
<%= @params[:source].tags.map(&:to_hashtag).join(' ') %>
<% end -%>
